doctype html
html
	head
		title
			| #{title}
		link(rel="stylesheet", href="/font-awesome/css/font-awesome.min.css")
		link(rel="stylesheet", href="/font-awesome/css/all.min.css")
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		link(rel='preconnect' href='https://fonts.googleapis.com')
		link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
		link(href='https://fonts.googleapis.com/css2?family=Manrope:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' rel='stylesheet')
		link(rel="stylesheet", href="/stylesheets/bootstrap.css")
		style.
			*{
				font-family: 'Manrope', sans-serif;
			}
			.judul{
				font-size:30px;
			}
			.regisscreen{
				background-image:url('/images/wall1.jpg');
				background-size:cover;
				width:100%;
				height:45vh;
				background-position: center;
			}
			@media only screen and (min-width: 600px) {
				.judul{
					font-size:40px;
				}
				.regisscreen{
					height:100vh;
				}
			}
	div(style="width:100%;padding-right:12px;padding-left:12px;")
		.row.flex-row-reverse
			.col-sm-8.p-0.col-md-8
				.regisscreen.shadow
			.col-sm-4.p-0.col-md-4.d-flex.align-items-center
				.container.px-5
					form(action="/register/",method="post").mt-4
						p.fw-bold.judul.text-center DAFTAR AKUN
						- if (messages.msg_error) 
							.alert.alert-danger.alert-dismissible 
								button.close(type='button', data-bs-dismiss='alert', aria-hidden='true') 
									h4
										i.icon.fa.fa-ban
										|  Peringatan 
									| !{messages.msg_error}
						- if (messages.msg_info) 
							.alert.alert-success.alert-dismissible 
								button.close(type='button', data-bs-dismiss='alert', aria-hidden='true') 
									h4
										i.icon.fa.fa-ban
										|  Berhasil 
									| !{messages.msg_info}
						.mt-4
							label Nama
							input(type="text",placeholder="Masukan Nama",name="name" required).form-control
						.mt-4
							label Nomor HP
							input(type="text",placeholder="Masukan Nomor HP",name="phone" required).form-control
						.mt-4
							label Email
							input(type="email",placeholder="Masukan Email",name="email" required).form-control
						.mt-4
							label Password
							.input-group
								input(type="password",placeholder="Masukan Password",name="password" required).form-control
								.input-group-append
									span.input-group-text.rounded-0.rounded-end
										a(href="#").text-decoration-none.toggle_hide_password
											i.fas.fa-eye-slash(aria-hidden='true')
						.col-12
							button(type="submit" style="width:100%;background-color: #8BC6EC; background-image: linear-gradient(135deg, #8BC6EC 0%, #9599E2 100%);").btn.btn-success.btn-block.btn-flat.my-4.border-0.fw-bold
								| Daftar
						.d-flex.flex-row.bd-highlight.mb-3
							p Sudah punya akun? 
								a.text-success(href='/gate' style='text-decoration:none;') sing in
	script(type='text/javascript', src='/javascripts/jquery.js')
	script(type='text/javascript', src='/javascripts/bootstrap.js')
	script.
		$(document).ready(function() {
			$(".toggle_hide_password").click(function(e) {
				e.preventDefault()
				var input_group = $(this).closest('.input-group');
				var input = input_group.find('input.form-control');
				var icon = input_group.find('i');
				input.attr('type', input.attr("type") === "text" ? 'password' : 'text');
				icon.toggleClass('fa-eye-slash fa-eye');
			});
		});